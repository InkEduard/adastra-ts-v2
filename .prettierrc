{
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "bracketSameLine": false,
    "printWidth": 80,
    "plugins": [
      "prettier-plugin-organize-imports",
      "@shopify/prettier-plugin-liquid",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.liquid",
        "options": {
          "printWidth": 120,
          "singleQuote": false,
          "liquidSingleQuote": true,
          "indentSchema": true,
          "singleLineLinkTags": true,
          "bracketSameLine": false,
          "parser": "liquid-html"
        }
      }
    ]
}
